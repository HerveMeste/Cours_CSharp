@model List<Comment>

@{
    ViewData["Title"] = "Profil utilsateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Recherche de commentaires</h1>

<form class="my-5 text-center" method="get" src="https://localhost:44399/Comment/PostId">
    <div class="col-4 mb-3 text-center mx-auto">
        <label for="inputPlanets" class="form-label">Saisir le numéro de l'utilsateur</label>
        <input type="number" id="inputPlanets" class="form-control" name="userId" required min="1" max="10" />
        <div id="numberHelp" class="form-text">(un numéro entre 1 et 10)</div>
    </div>
    <button type="submit" class="btn btn-primary">ENVOYER</button>
</form>

@{
    if (Model != null)
    {
        <h4> Il y a @Model.Count commentaires</h4>
        <table class="table table-bordered text-center table-responsive">
            <thead>
                <tr>
                    <th>PostId</th>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Email</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Comment comment in Model)
                {
                    <tr>
                        <td class="align-middle">@comment.postId</td>
                        <td class="align-middle">@comment.id</td>
                        <td class="align-middle">@comment.name</td>
                        <td class="align-middle">@comment.email</td>
                        <td class="align-middle">@comment.body</td>
                    </tr>
                }
            </tbody>
        </table>


    }
}
