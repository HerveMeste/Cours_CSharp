@model List<Photo>

@{
    ViewBag.Title = "Photos of User's Albums";
    Layout = "_Layout";
}

<h1>Photos Searching</h1>

<form class="my-5 text-center" method="get" src="https://localhost:44391/Photo/Index">
    <div class="col-4 mb-3 text-center mx-auto">
        <label for="inputUsers" class="form-label">Choose your id's user</label>
        <input type="number" id="inputUsers" class="form-control" name="userId" required min="1" max="10" />
        <div id="numberHelp" class="form-text">(a number between 1 and 10)</div>
    </div>
    <button type="submit" class="btn btn-primary">SUBMIT</button>
</form>

@{
    if (Model.Count > 0)
    {
        <h4>There are @Model.Count photos from your User choice.</h4>
        <table class="table table-bordered text-center table-responsive">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Grande Image</th>
                    <th>Album</th>
                </tr>
            </thead>
            <tbody>
               @foreach (Photo photo in Model)
                {
                    
                <tr>
                    <td class="align-middle">@photo.title</td>
                    <td class="align-middle"><img src="@photo.thumbnailUrl" /></td>
                    <td class="align-middle"><img src="@photo.url" /></td>
                    <td class="align-middle">@photo.albumId</td>
                </tr>
                }
            </tbody>
        </table>
    }
}